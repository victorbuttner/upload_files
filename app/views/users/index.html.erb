<p id="notice"><%= notice %></p>

<h1>Lista de usuários cadastrados</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Admin?</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.cpf %></td>
        <td><%= user.telefone %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>


        <td><%= link_to ' Editar ', edit_user_path(user), class: "glyphicon glyphicon-edit btn btn-warning" %></td>
        <td><%= link_to ' Remover ', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<br>

<%= link_to 'Novo Usuário',  new_user_registration_path , class: "btn btn-primary" %>

<p id="notice"><%= notice %></p>

<h1>Lista de envios</h1>
<p> Abaixo a relação de todos os envios feitos pelo usuário</p>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Usuário</th>
          <th>Descrição do Arquivo</th>
          <th>Arquivo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @uploads.each do |upload| %>
          <tr>
            <td><%= User.find(upload.user_id).name %></td>
            <td><%= upload.description %></td>
            <td><%= link_to upload.file.original_filename, upload.file.url %></td>
            <!-- <td><%= link_to 'Show', upload , class: "glyphicon glyphicon-edit"%></td> -->
            <td><%= link_to 'Editar ', edit_upload_path(upload), class: "glyphicon glyphicon-edit btn btn-warning"  %></td>
            <td><%= link_to 'Remover ', upload, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

